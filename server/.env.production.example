# Production Environment Configuration
# Copy this file to .env.production and configure for your deployment

# Server Configuration
NODE_ENV=production
PORT=5001

# MongoDB Connection
# Replace with your production MongoDB URI
MONGODB_URI=mongodb://localhost:27017/eventhub_production

# Session Secret (use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your-production-secret-key-change-this

# CORS Configuration
# Comma-separated list of allowed origins (your frontend domains)
# Supports exact matches (https://yourdomain.com) and wildcard patterns (*.yourdomain.com)
# Leave empty to allow all origins (not recommended for production)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://*.mictech.dpdns.org

# Frontend URL (for email links, etc.)
FRONTEND_URL=

# Email Configuration (optional)
# ENABLE_EMAIL=true
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=EventHub <noreply@yourdomain.com>

# Health Monitoring (optional)
# ENABLE_HEALTH_EMAILS=false
# ADMIN_EMAIL=admin@yourdomain.com

# File Upload Limits
MAX_FILE_SIZE=50mb
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# JWT Secret (if using JWT authentication)
# JWT_SECRET=your-jwt-secret-change-this
