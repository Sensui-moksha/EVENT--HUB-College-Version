{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "dev:alt": "npm-run-all --parallel frontend backend",
    "frontend": "cross-env NODE_ENV=development vite",
    "backend": "npm --prefix server run dev",
    "production": "npm run build && npm run start-server",
    "start-server": "npm --prefix server start",
    "build": "cross-env NODE_ENV=production vite build",
    "build:windows": "set NODE_ENV=production && vite build",
    "build:unix": "NODE_ENV=production vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "cross-env NODE_ENV=test vitest --environment jsdom",
    "test:watch": "cross-env NODE_ENV=test vitest --environment jsdom --watch",
    "preview": "vite preview",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:windows": "rmdir /s /q dist && rmdir /s /q node_modules\\.vite",
    "postinstall": "npm --prefix server install"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@types/qrcode": "^1.5.6",
    "bcryptjs": "^3.0.3",
    "caniuse-lite": "^1.0.30001762",
    "date-fns": "^4.1.0",
    "exceljs": "^4.4.0",
    "framer-motion": "^12.24.7",
    "html5-qrcode": "^2.3.8",
    "lucide-react": "^0.562.0",
    "mongodb": "^6.21.0",
    "node-fetch": "^3.3.2",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-easy-crop": "^5.5.6",
    "react-hook-form": "^7.70.0",
    "react-image-crop": "^11.0.10",
    "react-router-dom": "^7.11.0",
    "react-swipeable": "^7.0.2",
    "socket.io-client": "^4.8.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "focus-trap-react": "^11.0.4",
    "globals": "^15.15.0",
    "jsdom": "^27.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.19",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.0",
    "vitest": "^3.2.4"
  }
}
